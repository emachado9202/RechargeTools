@model RechargeTools.Models.Views.DashboardViewModel
@{
    ViewBag.Title = "Resumen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center">Resumen</h2>

<h4 class="text-center">Recargas Agentes</h4>
<div class="row">
    @foreach (var agent in Model.Agents)
    {
        <div class="col-12 col-lg-6 col-xl">
            <!-- Card -->
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col align-items-center">

                            <!-- Title -->
                            <h5 class="card-title text-uppercase text-center mb-2">
                                @agent.Item1
                            </h5>
                            <span class="h2 mb-0 pull-left">
                                <span class="text-danger">
                                    @agent.Item2
                                </span> <i class="fa fa-caret-right"></i> <span class="text-success">@agent.Item3</span>
                            </span>
                            <br />
                            <br />
                            <span class="h2 mb-0 pull-left">
                                <span class="text-warning">
                                    $@agent.Item4
                                </span><i class="fa fa-caret-right"></i> <span class="text-success">
                                    $@agent.Item5
                                </span>
                            </span>
                        </div>
                        <div class="col-auto">
                            <!-- Icon -->
                            <span class="h2 fa fa-4x fa-android text-muted mb-0"></span>
                        </div>
                    </div> <!-- / .row -->
                </div>
            </div>
        </div>
    }
</div>

<h4 class="text-center mt-2">Recargas Pendientes</h4>
<div class="row">
    @foreach (var number in Model.PendentNumbers)
    {
        <div class="col">
            @Html.ActionLink($"{number.Item1}", "Index", routeValues: new { agent_select = number.Item2, number_search = number.Item1 })
        </div>
    }
</div>